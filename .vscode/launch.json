{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STM32F411 Debug (ST-LINK V3SET)",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "stlink",
      "interface": "swd",

      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/firmware.elf",

      // Leave this as just "STM32F411" or "STM32F411CE" (either usually works)
      "device": "STM32F411",

      // If arm-none-eabi-gdb is on PATH, keep this. Otherwise set it to your full gdb exe path.
      "gdbPath": "arm-none-eabi-gdb",

      // Point Cortex-Debug at the ST-LINK gdb server exe (your env var)
      "stlinkPath": "${env:STLINK_GDBSERVER_PATH}",

      // Point Cortex-Debug at the CubeProgrammer *bin* folder (your env var)
      "stm32cubeprogrammer": "${env:STM32CUBE_PROGRAMMER_PATH}",

      "runToEntryPoint": "main",
      "showDevDebugOutput": "raw",

      "liveWatch": {
      "enabled": true,
      "samplesPerSecond": 4
      }
    }
  ]
}

